ase/Makefile.in, src/speech/Makefile, src/speech/Makefile.am, src/speech/Makefile.in, src/speech/SpeechConnection.cpp, src/speech/SpeechConnection.h, src/speech/SpeechImpl.h, src/sphinx/Makefile, src/sphinx/Makefile.am, src/sphinx/Makefile.in, src/video/BufferManager.h, src/video/BufferManagerMeteor.h, src/video/Makefile, src/video/Makefile.am, src/video/Makefile.bin, src/video/Makefile.in, src/video/Makefile.lib, src/video/VideoBrokerImpl.h, src/video/VideoConsumer.h, src/video/VideoFilter.cpp, src/video/VideoFilter.h, src/video/VideoFilterFactory.h, src/video/VideoImpl.h, src/video/VideoServer.cpp, src/video/VideoService.cpp, tests/Makefile, tests/Makefile.am, tests/Makefile.in, tests/b21/B21BaseTest.cpp, tests/b21/B21ButtonsTest.cpp, tests/b21/B21SelfTest.cpp, tests/b21/B21StressBase.cpp, tests/b21/Makefile, tests/b21/Makefile.am, tests/b21/Makefile.in, tests/dpPanTilt/DpPanTiltTest.cpp, tests/dpPanTilt/Makefile, tests/dpPanTilt/Makefile.am, tests/dpPanTilt/Makefile.in, tests/dtlk/DtlkSpeechTest.cpp, tests/dtlk/Makefile, tests/dtlk/Makefile.am, tests/dtlk/Makefile.in, tests/faul/Makefile, tests/faul/Makefile.am, tests/faul/Makefile.in, tests/gripper/GripperTest.cpp, tests/gripper/Makefile, tests/gripper/Makefile.am, tests/gripper/Makefile.in, tests/motion/DifferentialMotionInterface.h, tests/motion/DifferentialMotionTest.cpp, tests/motion/Makefile, tests/motion/Makefile.am, tests/motion/Makefile.in, tests/motion/MotionInterface.h, tests/motion/MotionTest.cpp, tests/motion/SynchroMotionInterface.h, tests/motion/SynchroMotionTest.cpp, tests/notify/Makefile, tests/notify/Makefile.am, tests/notify/Makefile.in, tests/notify/NotifyTest.cpp, tests/odometry/Makefile, tests/odometry/Makefile.am, tests/odometry/Makefile.in, tests/odometry/OdometryTest.cpp, tests/panTilt/Makefile, tests/panTilt/Makefile.am, tests/panTilt/Makefile.in, tests/panTilt/PanTiltTest.cpp, tests/pioneer/Makefile, tests/pioneer/Makefile.am, tests/pioneer/Makefile.in, tests/rangeSensor/Makefile, tests